<html>
 <head>
  <title> Index </title>
  <meta name="Generator" content="EditPlus">
  <meta name="Author" content="">
  <meta name="Keywords" content="">
  <meta name="Description" content="">
  <link rel='stylesheet' type='text/css' href="{{url_for('static',filename='stylesheet/style.css')}}" />
  <link rel='stylesheet' type='text/css' href = "{{url_for('static',filename='stylesheet/bubble-popup.css')}}" />
  <script src="http://code.jquery.com/jquery-1.10.0.min.js"></script>
  <script src="{{url_for('static',filename='JS/bubble-popup.min.js')}}" ></script>
  
	<script>
		$(function(){
			$("#popup").ShowBubblePopup({
				width:'100px',
				position:'top',
				align:'center',
				innerHtml:'Click To Add New Entry!!'	
			});
			$("#popup").click(function(){	
				window.location.href='/add';
			});
		})
		
	</script>

 </head>

 <body>
 <h2>Title----Text</h2>
	<ul class = entries>
		{% for entry in entries %}
		<li>{{entry.title}} ---- {{entry.text|safe}}&nbsp;&nbsp; <a href='/delete/{{entry.title}}'>Delete</a> &nbsp;| &nbsp;<a href="/edit/{{entry.title}}">Edit</a></li>
		{% endfor %}
	</ul>
	<button id="popup" >Add</button>
  </body>
</html>
